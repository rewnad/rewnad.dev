---
const projects = [
  {
    id: 'ai-chat',
    title: 'Simple Chat',
    description: 'Simple chat with AI.',
    imageAlt: 'Simple Chat project'
  },
];
---

<section class="projects">
  <h2>Projects</h2>
  <div class="project-grid">
    {projects.map((project) => (
      <a href={`#${project.id}`} class="project-card">
        <div class="project-image">
          <div class="placeholder-image" />
        </div>
        <div class="project-info">
          <h3>{project.title}</h3>
          <p>{project.description}</p>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  .projects {
    max-width: 800px;
    margin: 0 auto;
    padding: 40px 20px 80px;
  }

  h2 {
    font-size: 16px;
    font-weight: 500;
    color: #000;
    margin: 0 0 32px 0;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
  }

  .project-card {
    display: block;
    text-decoration: none;
    border-radius: 16px;
    overflow: hidden;
    background: #fff;
    border: 1px solid #e5e5e5;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .project-image {
    width: 100%;
    aspect-ratio: 16 / 10;
    background: #f5f5f5;
    position: relative;
    overflow: hidden;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: #e5e5e5;
  }

  .project-info {
    padding: 20px;
  }

  .project-info h3 {
    font-size: 16px;
    font-weight: 600;
    color: #000;
    margin: 0 0 8px 0;
  }

  .project-info p {
    font-size: 14px;
    line-height: 1.625;
    color: #666;
    margin: 0;
  }

  @media (max-width: 768px) {
    .projects {
      padding: 32px 20px 60px;
    }

    .project-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    h2 {
      margin-bottom: 24px;
    }
  }
</style>
